<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.iwenddg.androidexample">

    <application
        android:name=".basemvvm.application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidExample">
        <activity
            android:name=".work.activity.TabLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".work.activity.NavViewPagerActivity"
            android:exported="false" />
        <activity
            android:name=".work.activity.NavTabActivity"
            android:exported="false" />
        <activity
            android:name=".work.activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:hardwareAccelerated="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>